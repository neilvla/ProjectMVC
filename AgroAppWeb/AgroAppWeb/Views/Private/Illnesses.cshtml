@model IEnumerable<EntityLayer.Illness>

@{
    ViewData["Title"] = "Illnesses";
    Layout = "~/Views/Structure/_PrivateLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Males</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Illinesses", "Private")">Esto es</a>
            </li>
            <li class="active">
                <strong>Males</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Listado de Males</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row" style="padding-bottom: 20px;">
                        <div class="col-md-12">
                            <a class="btn btn-primary" asp-action="IllnessForm">Agregar</a>
                        </div>
                    </div>
                    <div class="row">
                        <table class="table table-striped table-bordered table-hover mydataTables">
                            <thead>
                                <tr>
                                    <th>
                                        Nombre
                                    </th>
                                    <th>
                                        Imagen
                                    </th>
                                    <th>
                                        Tipo
                                    </th>
                                    <th>
                                        Fecha de Creación
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td class="text-center">
                                            <img class="img-circle" src="@Url.Content("~/StaticFiles/agroappresource/images/illnesses/" + item.Image)" onerror="this.src='../StaticFiles/agroappresource/images/illnesses/default-image.png';" alt="Image" style="width: 48px; height: 48px" />
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IllnessType.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreatedDate)
                                        </td>
                                        <td>
                                            <span><a class="btn btn-default btn-xs" asp-action="IllnessForm" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a></span>
                                            <span><a class="btn btn-default btn-xs" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a></span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>