@model IEnumerable<EntityLayer.ControlSequence>
@{
    ViewData["Title"] = "Controlsequence";
    Layout = "~/Views/Structure/_PrivateLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Secuencia de Control de Cultivo</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("ControlSequence", "Private")">Esto es</a>
            </li>
            <li class="active">
                <strong>Secuencia de Control</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Fases - Etapas - Tareas</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row" style="padding-bottom: 20px;">
                        <div class="col-md-12">
                            <a class="btn btn-primary" asp-action="ControlsequenceForm">Agregar</a>
                        </div>
                    </div>
                    <div class="row">
                        <table class="table table-striped table-bordered table-hover mydataTables">
                            <thead>
                                <tr>
                                    <th>
                                        Fase
                                    </th>
                                    <th>
                                        Etapa
                                    </th>
                                    <th>
                                        Tarea
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@item.Phase.Name</td>
                                    <td>@item.Stage.Name</td>
                                    <td>@item.Task.Name</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
