@model EntityLayer.Illness

@{
    ViewData["Title"] = "IllnessForm";
    Layout = "~/Views/Structure/_PrivateLayout.cshtml";
    string myimage = (Model == null ? "" : Model.Image);
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>This is main title</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Dashboard_1", "Dashboards")">This is</a>
            </li>
            <li class="active">
                <strong>Breadcrumb</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Males</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="IllnessSave" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <input type="hidden" asp-for="Id">
                                    <label asp-for="Name" class="control-label">Nombre</label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label">Descripción</label>
                                    <textarea asp-for="Description" class="form-control"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label for="Image">Imagen</label>
                                    <input type="hidden" name="Image" id="imageTemp" value="@myimage">
                                    <div class="fileinput fileinput-new" data-provides="fileinput">
                                        <span class="btn btn-default btn-file">
                                            <span class="fileinput-new">Select file</span>
                                            <span class="fileinput-exists">Change</span><input type="file" asp-for="Image" />
                                        </span>
                                        <span class="fileinput-filename"></span>
                                        <a href="#" class="close fileinput-exists" data-dismiss="fileinput" style="float: none">×</a>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Id" class="control-label">Mal</label>
                                    <span asp-validation-for="Id" class="text-danger"></span>
                                    <select class="form-control" asp-for="IllnessType.Id">
                                        <option value="1">Enfermedad</option>
                                        <option value="2">Plaga</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Status" class="control-label"></label>
                                    <select class="form-control" asp-for="Status">
                                        <option value="1">Activo</option>
                                        <option value="2">Inactivo</option>
                                    </select>
                                </div>
                                <button type="submit" id="btnSaveIllness" class="btn btn-primary"><i class="fa fa-save"></i> Guardar</button>
                                <a class="btn btn-default" asp-action="Illinesses"><i class="fa fa-reply"></i> Regresar</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $("#btnSaveIllness").on("click", function () {
            if ($("#Image").val() != "") {
                $("#imageTemp").val($("#Image").val().split('\\').pop());
            }
        });
    });
</script>