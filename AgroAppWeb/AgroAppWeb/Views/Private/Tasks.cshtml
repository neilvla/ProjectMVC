@model IEnumerable<EntityLayer.Task>
@{
    ViewData["Title"] = "Tasks";
    Layout = "~/Views/Structure/_PrivateLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Tareas</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Tasks", "Private")">Esto es</a>
            </li>
            <li class="active">
                <strong>Tareas</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Listado de Tareas</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row" style="padding-bottom: 20px;">
                        <div class="col-md-12">
                            <a class="btn btn-primary" asp-action="TaskForm">Agregar</a>
                        </div>
                    </div>
                    <div class="row">
                        <table class="table table-striped table-bordered table-hover mydataTables">
                            <thead>
                                <tr>
                                    <th>
                                        Nombre
                                    </th>
                                    <th>
                                        Descripción
                                    </th>
                                    <th>
                                        Fecha de Creación
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @item.Name
                                            </td>
                                            <td>
                                                @item.Description
                                            </td>
                                            <td>
                                                @item.CreatedDate.ToShortDateString()
                                            </td>
                                            <td>
                                                <a class="btn btn-default btn-xs" asp-action="TaskForm" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                                                <a class="btn btn-default btn-xs" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
