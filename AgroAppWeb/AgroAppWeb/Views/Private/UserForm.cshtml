@model EntityLayer.User
@{
    ViewData["Title"] = "UserSave";
    Layout = "~/Views/Structure/_PrivateLayout.cshtml";
    string myimage = (Model == null ? "" : Model.Image);
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>This is main title</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Dashboard_1", "Dashboards")">This is</a>
            </li>
            <li class="active">
                <strong>Breadcrumb</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Usuario</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="UserSave" enctype="multipart/form-data">
                                <div class="form-group">
                                    <input type="hidden" asp-for="Id">
                                    <label asp-for="Name">Nombre</label>
                                    <input type="text" asp-for="Name" class="form-control" placeholder="Name">
                                </div>
                                <div class="form-group">
                                    <label asp-for="LastName">Apellido</label>
                                    <input type="text" asp-for="LastName" class="form-control" placeholder="Last Name">
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email">Correo</label>
                                    <input type="email" class="form-control" asp-for="Email" placeholder="name@example.com">
                                </div>
                                <div class="form-group hidden">
                                    <label for="Password">Clave</label>
                                    <input type="text" asp-for="Password" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="Image">Imagen</label>
                                    <input type="hidden" name="Image" value="@myimage">
                                    <div class="fileinput fileinput-new" data-provides="fileinput">
                                        <span class="btn btn-default btn-file">
                                            <span class="fileinput-new">Select file</span>
                                            <span class="fileinput-exists">Change</span><input type="file" asp-for="Image" />
                                        </span>
                                        <span class="fileinput-filename"></span>
                                        <a href="#" class="close fileinput-exists" data-dismiss="fileinput" style="float: none">×</a>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="UserType">Tipo de Usuario</label>
                                    <select class="form-control" asp-for="UserType.Id">
                                        <option value="1">Administrador</option>
                                        <option value="2">Agricultor</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="Status">Estado</label>
                                    <select class="form-control" asp-for="Status">
                                        <option value="1">Activo</option>
                                        <option value="2">Inactivo</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Guardar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
