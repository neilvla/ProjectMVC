@model EntityLayer.IncidenceResponse

@{
    ViewData["Title"] = "IncidentsForm";
    Layout = "~/Views/Structure/_PrivateLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>This is main title</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Dashboard_1", "Dashboards")">This is</a>
            </li>
            <li class="active">
                <strong>Breadcrumb</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Responder Incidencia</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="IncidentsResponseSave" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label asp-for="objIncidence.Subject">Asunto de Incidencia Reportada</label>
                                    <input type="text" asp-for="objIncidence.Subject" class="form-control" disabled>
                                </div>
                                <div class="form-group">
                                    <label asp-for="objIncidence.Description">Descripción de Incidencia Reportada</label>
                                    <textarea asp-for="objIncidence.Description" class="form-control" disabled></textarea>
                                </div>
                                <div class="form-group">
                                    <input type="hidden" asp-for="objIncidence.Id">
                                    <label asp-for="Subject">Asunto</label>
                                    <input type="text" asp-for="Subject" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description">Descripción</label>
                                    <textarea asp-for="Description" class="form-control"></textarea>
                                </div>
                                <button type="submit" id="btnSavePhase" class="btn btn-primary"><i class="fa fa-save"></i> Guardar</button>
                                <a class="btn btn-default" asp-action="Incidents"><i class="fa fa-reply"></i> Regresar</a>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>