@model EntityLayer.Stage
@{
    ViewData["Title"] = "StageForm";
    Layout = "~/Views/Structure/_PrivateLayout.cshtml";
    string myimage = (Model == null ? "" : Model.Image);    
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Etapas</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Dashboard_1", "Dashboards")">Esto es</a>
            </li>
            <li class="active">
                <strong>Formulario de Etapas</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Formulario de Etapas</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="StageSave" enctype="multipart/form-data">
                                <div class="form-group">
                                    <input type="hidden" asp-for="Id">
                                    <label asp-for="Name">Nombre</label>
                                    <input type="text" asp-for="Name" class="form-control" placeholder="Name">
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description">Descripción</label>
                                    <textarea asp-for="Description" class="form-control"></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="Image">Imagen</label>
                                    <input type="hidden" name="Image" id="imageTemp" value="@myimage">
                                    <div class="fileinput fileinput-new" data-provides="fileinput">
                                        <span class="btn btn-default btn-file">
                                            <span class="fileinput-new">Select file</span>
                                            <span class="fileinput-exists">Change</span><input type="file" asp-for="Image" />
                                        </span>
                                        <span class="fileinput-filename"></span>
                                        <a href="#" class="close fileinput-exists" data-dismiss="fileinput" style="float: none">×</a>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="Status">Estado</label>
                                    <select class="form-control" asp-for="Status">
                                        <option value="1">Activo</option>
                                        <option value="2">Inactivo</option>
                                    </select>
                                </div>
                                <button type="submit" id="btnSaveStage" class="btn btn-primary"><i class="fa fa-save"></i> Guardar</button>
                                <a class="btn btn-default" asp-action="Stages"><i class="fa fa-reply"></i> Regresar</a>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $("#btnSaveStage").on("click", function () {
            if ($("#Image").val() != "") {
                $("#imageTemp").val($("#Image").val().split('\\').pop());
            }
        });
    });
</script>