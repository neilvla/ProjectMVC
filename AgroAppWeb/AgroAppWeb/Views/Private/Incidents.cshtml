@model IEnumerable<EntityLayer.Incidence>

@{
    ViewData["Title"] = "Incidents";
    Layout = "~/Views/Structure/_PrivateLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Incidencias</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Incidents", "Private")">Esto es</a>
            </li>
            <li class="active">
                <strong>Incidencias</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Listado de Incidencias</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <table class="table table-striped table-bordered table-hover mydataTables">
                            <thead>
                                <tr>
                                    <th>
                                        Asunto
                                    </th>
                                    <th>
                                        Descripción
                                    </th>
                                    <th>
                                        Estado
                                    </th>
                                    <th>
                                        Creado Por
                                    </th>
                                    <th>
                                        Fecha de Creación
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Subject
                                        </td>
                                        <td>
                                            @item.Description
                                        </td>
                                        <td>
                                            @(item.Status == 0 ? "cancelado" : @item.Status == 1 ? "Pendiente" : "Completado")
                                        </td>
                                        <td>
                                            @item.objUser.Name @item.objUser.LastName
                                        </td>
                                        <td>
                                            @item.CreatedDate.ToShortDateString()
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-default btnViewDetail btn-xs" data-toggle="modal" data-target="#exampleModal" data-id="@item.Id">
                                                <i class="fa fa-eye"></i>
                                            </button>

                                            <a class="btn btn-primary btn-xs" asp-action="IncidentsForm" asp-route-id="@item.Id"><i class="fa fa-plus"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Detalle de la Incidencia</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" style="padding-bottom: 0">
                    <div class="row" id="divImages">

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function(){
        $(".btnViewDetail").on("click", function () {
            $("#divImages").html("");

            var id = $(this).data("id");
            $.ajax({
                type: "GET",
                url: '@Url.Action("DetailIncident")?Id=' + id,
                //data: JSON.stringify({ "id": "1" }),
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (response) {
                    if (response.length === 0) {
                        return;
                    }

                    var data = "";
                    for (var i = 0; i < response.length; i++) {
                        data += '<div class="col-md-6">' +
                                    '<div class="thumbnail">' +
                                        '<img src="../StaticFiles/' + response[i].image + '"  alt="Lights" style="width:100%">' +
                                    '</div>' +
                                '</div>';
                    }

                    $("#divImages").html(data);
                },
                error: function (rpt) {
                    console.log("error");
                }
            });

        });
    });

</script>