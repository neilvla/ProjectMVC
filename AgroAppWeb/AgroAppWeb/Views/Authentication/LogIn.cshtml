
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Structure/_LoginLayout.cshtml";
}

<div class="loginColumns animated fadeInDown">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="ibox-content">
                <div class="row text-center">
                    <img src="~/images/logo.png" style="width: 200px; height:88px;" />
                </div>
                <div class="row">
                    <form class="m-t" role="form" asp-action="Validate">
                        <div class="form-group">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Usuario" required="">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="pass" name="pass" placeholder="Contraseña" required="">
                        </div>
                        <button type="submit" class="btn btn-primary block full-width m-b">Ingresar</button>
                    </form>
                    <p class="m-t">
                        <small>AgroApp &copy; 2018 - Todos los derechos reservados</small>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>